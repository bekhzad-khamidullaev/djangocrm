# ============================================================================
# Django CRM Environment Configuration
# Copy this file to .env and update with your values
# ============================================================================

# ============================================================================
# DJANGO SETTINGS
# ============================================================================
DEBUG=False
SECRET_KEY=changeme-generate-a-secure-random-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_ENGINE=django.db.backends.postgresql
POSTGRES_DB=django_crm
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=changeme-secure-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Alternative: MySQL
# DATABASE_ENGINE=django.db.backends.mysql
# MYSQL_DATABASE=django_crm
# MYSQL_USER=crm_user
# MYSQL_PASSWORD=changeme
# MYSQL_HOST=db
# MYSQL_PORT=3306

# ============================================================================
# REDIS & CELERY
# ============================================================================
REDIS_PASSWORD=changeme-redis-password
REDIS_PORT=6379

CELERY_BROKER_URL=redis://:changeme-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:changeme-redis-password@redis:6379/1
CHANNEL_LAYERS_HOST=redis://:changeme-redis-password@redis:6379/2

# Celery Worker Settings
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# ============================================================================
# SMS CONFIGURATION
# ============================================================================
SMS_SEND_MAX_RETRIES=2
SMS_SEND_BACKOFF_SEC=2
SMS_ALERT_EMAILS=admin@example.com,alerts@example.com

# Eskiz SMS (configure in Django Admin or here)
# ESKIZ_EMAIL=your@email.com
# ESKIZ_PASSWORD=your_password
# ESKIZ_FROM=4546

# PlayMobile SMS (configure in Django Admin)
# PLAYMOBILE_TOKEN=your_bearer_token
# PLAYMOBILE_FROM=YourSenderID

# ============================================================================
# VOIP CONFIGURATION
# ============================================================================
DEFAULT_CALLER_ID=1000

# Asterisk AMI
ASTERISK_AMI_HOST=
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USERNAME=
ASTERISK_AMI_SECRET=
ASTERISK_AMI_SSL=False
ASTERISK_AMI_TIMEOUT=5
ASTERISK_AMI_RECONNECT=5

# FreeSWITCH ESL
FREESWITCH_HOST=
FREESWITCH_PORT=8021
FREESWITCH_PASSWORD=

# OnlinePBX (configure in Django Admin)
# ONLINEPBX_DOMAIN=yourcompany.onpbx.ru
# ONLINEPBX_KEY_ID=your_key_id
# ONLINEPBX_SECRET=your_secret_key

# ============================================================================
# ANALYTICS & PREDICTIONS
# ============================================================================
ANALYTICS_FORECASTS_ENABLED=True
ANALYTICS_FORECASTS_CELERY_ENABLED=True
ANALYTICS_FORECAST_HORIZON_DAYS=30

# ============================================================================
# NGINX & WEB SERVER
# ============================================================================
WEB_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ============================================================================
# FLOWER (Celery Monitoring)
# ============================================================================
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=changeme-flower-password

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ============================================================================
# MISC
# ============================================================================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# Python version for Docker build
PYTHON_VERSION=3.11
