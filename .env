TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# JWT & CORS
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7
JWT_ROTATE_REFRESH=True
JWT_BLACKLIST_AFTER_ROTATION=True
JWT_UPDATE_LAST_LOGIN=True
JWT_ALGORITHM=HS256
CORS_ALLOW_ALL_ORIGINS=False
